{
    "deck_name": "Desktop Streamdeck",
    "deck_type": "StreamdeckV2",
    "pages":
    [
        { 
            "page_number": 1,
            "home_page": true,
            "keys": [
                {
                    "button": 0, 
                    "primary_icon": "folders/folder-blue.png",
                    "display_page": 4
                },
                {
                    "button": 1, 
                    "primary_icon": "terminal.png",
                    "action": "konsole"
                },
                {
                    "button": 2, 
                    "primary_icon": "code-dark.png",
                    "display_page": 2
                },
                {
                    "button": 3, 
                    "primary_icon": "slack.png",
                    "display_page": 3,
                    "action": "slack"
                },
                {
                    "button": 4, 
                    "primary_icon": "mic-on.png",
                    "primary_label": "un-mute", 
                    "secondary_icon": "mic-off.png",
                    "secondary_label": "mute", 
                    "action": "xdotool key ctrl+shift+alt+F9",
                    "toggle": true
                },
                {
                    "button": 10, 
                    "primary_icon": "paper.png", 
                    "action": "xdotool key ctrl+c"
                },
                {
                    "button": 11, 
                    "primary_icon": "clipboard.png", 
                    "action": "xdotool key ctrl+v"
                }
            ]
        },
        { 
            "page_number": 2,
            "home_page": false,
            "keys": [
                {
                    "button": 0,
                    "primary_icon": "back.png",
                    "display_page": 1

                },
                {
                    "button": 1,
                    "primary_icon": "git-graph.png",
                    "action": "xdotool key ctrl+shift+alt+v g"
                },
                {
                    "button": 5,
                    "primary_icon": "menu-left.png",
                    "secondary_icon": "menu-right.png",
                    "action": "xdotool key ctrl+b",
                    "toggle": true
                }
            ]
        },
        { 
            "page_number": 3,
            "home_page": false,
            "keys": [
                {
                    "button": 0,
                    "primary_icon": "back.png",
                    "display_page": 1

                }
            ]
        },
        { 
            "page_number": 4,
            "home_page": false,
            "keys": [
                {
                    "button": 0,
                    "primary_icon": "back.png",
                    "display_page": 1

                },
                {
                    "button": 1,
                    "primary_icon": "folders/folder-blue-home.png",
                    "action": "xdg-open ~/"
