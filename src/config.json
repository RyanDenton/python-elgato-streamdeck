                {
                    "button": 5,
                    "primary_icon": "folders/folder-blue-git.png",
                    "action": "xdg-open ~/Work/code"
                },
                {
                    "button": 10,
                    "primary_icon": "folders/folder-blue-google-drive.png",
                    "action": "xdg-open ~/\"Google Drive\""                    
                },
                {
                    "button": 11,
                    "primary_icon": "folders/folder-blue-pictures.png",
                    "action": "xdg-open ~/Pictures"                                        
